{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2018", "dom"],
    "baseUrl": "./",
    "paths": {
      "@key-solutions/*": ["../../libs/*"],
      "@key-solutions/ionic": ["../../xplat/ionic/index.ts"],
      "@key-solutions/ionic/*": ["../../xplat/ionic/*"],
      "@key-solutions/web": ["../../xplat/web/index.ts"],
      "@key-solutions/web/*": ["../../xplat/web/*"]
    }
  }
}
